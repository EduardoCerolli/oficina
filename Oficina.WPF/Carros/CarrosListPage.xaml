<Page x:Class="Oficina.WPF.Carros.CarrosListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Carros">
    <StackPanel Margin="10">
        <TextBlock Text="{Binding Titulo}" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

        <DataGrid ItemsSource="{Binding Carros}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Placa" Binding="{Binding Placa}" Width="4*"/>
                <DataGridTextColumn Header="Marca" Binding="{Binding Marca}" Width="6*"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Voltar"
                Click="Voltar_Click"
                Width="200" Height="25" Margin="0,10,0,0"/>
    </StackPanel>
</Page>
